<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:background="@color/colorEventProfile">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:lines="2"
            android:id="@+id/event_title"
            android:textSize="20dp"
            android:textColor="#ffff"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="2dp"
            android:padding="10dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_club"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/txt_club"
                android:layout_height="52dp"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="16dp"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:textSize="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_calendar_purple"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/txt_start_date"
                android:layout_height="52dp"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="16dp"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:textSize="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/blank_end_date_image"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_calendar_purple"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/txt_end_date"
                android:layout_height="52dp"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="16dp"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:textSize="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_location_purple"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/txt_location"
                android:lines="3"
                android:maxLines="10"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="16dp"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:textSize="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_note_purple"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/event_description"
                android:lines="10"
                android:maxLines="10"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:textSize="16dp"/>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>